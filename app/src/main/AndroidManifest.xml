<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.example.android.pathfinderassistant">

    <application
            android:allowBackup="true"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/app_name"
            android:roundIcon="@mipmap/ic_launcher_round"
            android:supportsRtl="true"
            android:theme="@style/AppTheme">
        <activity android:name=".deck.CardListActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
                android:name=".deck.CardDetailActivity"
                android:parentActivityName=".deck.CardListActivity">
        </activity>
        <activity android:name=".DiceActivity"
        android:parentActivityName=".deck.CardListActivity"
        android:windowSoftInputMode="stateHidden">
        </activity>
    </application>

</manifest>